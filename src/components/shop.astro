---
import { Image } from "astro:assets";
import svgl from "../../public/svgl.png";
import productcard from "../../public/productcard.png";
import imageeffectspro from "../../public/imageeffectspro.jpg";
import orb from "../../public/orb.png";
import Starfield from "../../public/Starfield.png";
import TextType from "../../public/texttype.jpg";
import Falling from "../../public/fallingtext.jpg";
import Activity from "../../public/activitystatus.png";

interface Shop {
  title: string;
  image: ImageMetadata;
  preview: string;
  buy: string;
  status: string;
}

const shop: Shop[] = [
  {
    title: "Image Effects Pro",
    image: imageeffectspro as ImageMetadata,
    preview: "https://imageeffectspro.framer.website/preview",
    buy: "https://satsstudio.lemonsqueezy.com/buy/6ae91c93-1905-41fc-b84e-8032fee05eba",
    status: "Framer Component",
  },
    {
    title: "Galaxy Starfield",
    image: Starfield as ImageMetadata,
    preview: "https://galaxystarfield.framer.website/preview",
    buy: "https://satsstudio.lemonsqueezy.com/buy/9fcab122-f23b-4216-ba99-5b79eb833db3",
    status: "Framer Component",
  },
    {
    title: "Animated Orb",
    image: orb as ImageMetadata,
    preview: "https://animatedorb.framer.website/",
    buy: "https://satsstudio.lemonsqueezy.com/buy/b83424b0-d1d7-47c5-ab1b-e9a35a3a7222",
    status: "Framer Component",
  },
  {
    title: "Dynamic Product Card",
    image: productcard as ImageMetadata,
    preview: "https://dynamicproductcard.framer.website/preview",
    buy: "https://satsstudio.lemonsqueezy.com/buy/24107744-fb28-441c-afd4-8678b50f059b",
    status: "Framer Component",
  },
  {
    title: "TextType â€“ Typewriter Text Animation",
    image: TextType as ImageMetadata,
    preview: "https://texttype.framer.website/preview",
    buy: "https://satsstudio.lemonsqueezy.com/buy/c7c38e85-ccdf-4164-92c9-d42be72a043d",
    status: "Framer Component",
  },
  {
    title: "Falling Text",
    image: Falling as ImageMetadata,
    preview: "https://fallingtext.framer.website/preview",
    buy: "https://satsstudio.lemonsqueezy.com/buy/bc1840b2-67f7-4658-a320-a8e37b496e45",
    status: "Framer Component",
  },
   {
    title: "Activity Status",
    image: Activity as ImageMetadata,
    preview: "https://activitystatus.framer.website/",
    buy: "https://satsstudio.lemonsqueezy.com/buy/4be8a907-6208-47ac-a1b0-512f6b780bf8",
