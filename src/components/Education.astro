---
const educationList = [
  {
    year: "2020 - 2024",
    degree: "Bachelor of Science in Computer Science & Engineering",
    school: "Port City International University",
    location: "Chittagong, Bangladesh",
  },
  {
    year: "2018 - 2019",
    degree: "Higher Secondary Certificate (HSC)",
    school: "Fatikchhari Government College",
    location: "Chittagong, Bangladesh",
  }
];

const publications = [
  {
    title: "Comparative Study of Machine Learning and Deep Learning Models in Multifactorial Genetict Inheritance Disorder Classification",
    link: "https://example.com/ml-optimization",
  },
  {
    title: "Deep Dive into Software Engineering Practices",
    link: "https://example.com/software-engineering",
  }
];

// Function to shorten very long titles for better display
function shortenTitle(title, maxLength = 70) {
  if (title.length <= maxLength) return title;
  return title.slice(0, maxLength).trim() + "â€¦";
}
---

<section
  id="education"
  class="py-12 border-t border-[#ffffff10]"
  style="background: transparent; color: var(--white);"
>
  <div class="max-w-5xl mx-auto px-6">
    <h2 class="text-3xl font-bold mb-8">Education</h2>

    <ul class="space-y-6 mb-12">
      {educationList.map((edu, index) => (
        <li key={`edu-${index}`}>
          <p class="text-white-icon text-sm mb-1">{edu.year}</p>
          <p class="text-lg font-semibold">{edu.degree}</p>
          <p class="text-sec">{edu.school}</p>
          <p class="text-white-icon text-sm">{edu.location}</p>
        </li>
      ))}
    </ul>

    <h2 class="text-3xl font-bold mb-8">Publications</h2>

    <ul class="space-y-4 list-disc list-inside">
      {publications.map((pub, index) => (
        <li key={`pub-${index}`}>
          <a
            href={pub.link}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sec hover:underline"
            title={pub.title}
          >
            {shortenTitle(pub.title)}
          </a>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .text-white-icon {
    color: var(--white-icon);
  }
  .text-sec {
    color: var(--sec);
  }
</style>
