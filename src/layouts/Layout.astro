---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --background: #0a0a0a;
        --component-bg: #141414;
        --white: #ffffff;
        --white-icon: #a3a3a3;
        --white-icon-tr: #a3a3a3;
        --sec: #0BB6A5;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: 'Inter', system-ui, sans-serif;
        background-color: var(--background);
        color: var(--white);
        scroll-behavior: smooth;
      }

      body {
        font-family: 'Inter', system-ui, sans-serif;
        line-height: 1.6;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeLegibility;
      }

      /* Ensure consistent font weights across all devices */
      h1, h2, h3, h4, h5, h6 {
        font-weight: 700 !important;
        -webkit-font-weight: 700 !important;
        -moz-font-weight: 700 !important;
        font-synthesis: none;
      }

      .font-bold {
        font-weight: 700 !important;
        -webkit-font-weight: 700 !important;
        -moz-font-weight: 700 !important;
        font-synthesis: none;
      }

      .font-semibold {
        font-weight: 600 !important;
        -webkit-font-weight: 600 !important;
        -moz-font-weight: 600 !important;
        font-synthesis: none;
      }

      .font-medium {
        font-weight: 500 !important;
        -webkit-font-weight: 500 !important;
        -moz-font-weight: 500 !important;
        font-synthesis: none;
      }

      /* Mobile-specific font weight adjustments */
      @media (max-width: 767px) {
        h1, h2, h3, h4, h5, h6 {
          font-weight: 700 !important;
          -webkit-font-weight: 700 !important;
          -moz-font-weight: 700 !important;
        }
        
        .font-bold {
          font-weight: 700 !important;
          -webkit-font-weight: 700 !important;
          -moz-font-weight: 700 !important;
        }
      }

      /* Ensure text is readable on mobile */
      @media (max-width: 767px) {
        body {
          font-size: 16px; /* Prevent zoom on iOS */
        }
        
        input, textarea, select {
          font-size: 16px; /* Prevent zoom on iOS */
        }
      }

      /* Smooth scrolling for all devices */
      html {
        scroll-behavior: smooth;
      }

      /* Better touch targets on mobile */
      @media (max-width: 767px) {
        button, a, input, textarea, select {
          min-height: 44px;
          min-width: 44px;
        }
      }

      /* Improved focus states for accessibility */
      button:focus, a:focus, input:focus, textarea:focus, select:focus {
        outline: 2px solid var(--sec);
        outline-offset: 2px;
      }

      /* Better text rendering */
      * {
        text-rendering: optimizeLegibility;
        -webkit-font-feature-settings: "kern" 1;
        font-feature-settings: "kern" 1;
      }
    </style>
  </body>
</html>
